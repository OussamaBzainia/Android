<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundTint="@color/colorSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteY="-55dp">

        <EditText
            android:id="@+id/fullname"
            android:layout_width="190dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/colorSecondary"
            android:ems="10"
            android:hint="Fullname"
            android:inputType="textPersonName"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.868"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.046" />

        <View
            android:id="@+id/divider3"
            android:layout_width="400dp"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="#000000"
            android:backgroundTintMode="add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.834" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="60dp"
            android:layout_height="24dp"
            android:layout_marginBottom="228dp"
            android:text="Skills"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/divider3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="69dp"
            android:layout_height="25dp"
            android:layout_marginBottom="156dp"
            android:text="ANDROID"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/divider3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.953"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="69dp"
            android:layout_height="25dp"
            android:layout_marginBottom="20dp"
            android:text="FLUTTER"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/divider3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.953"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/flutterSeek"
            app:layout_constraintVertical_bias="0.974" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="35dp"
            android:layout_height="22dp"
            android:layout_marginBottom="92dp"
            android:text="iOS"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/divider3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.957"
            app:layout_constraintStart_toStartOf="parent" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="306dp"
            android:layout_height="60dp"
            android:animateLayoutChanges="true"
            android:checkedButton="@id/homme"
            android:descendantFocusability="afterDescendants"
            android:foregroundTint="@color/colorSecondary"
            android:layerType="none"
            android:layoutDirection="locale"
            android:layoutMode="opticalBounds"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/divider3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.58"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.49"
            app:layout_wrapBehaviorInParent="horizontal_only">

            <RadioButton
                android:id="@+id/homme"
                android:layout_width="150dp"
                android:layout_height="49dp"
                android:buttonTint="@color/colorSecondary"
                android:text="@string/homme"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/femme"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorSecondary"
                android:text="@string/femme"
                android:textSize="16sp" />
        </RadioGroup>

        <SeekBar
            android:id="@+id/androidSeek"
            android:layout_width="380dp"
            android:layout_height="28dp"
            android:layout_marginBottom="184dp"
            android:max="100"
            android:progressTint="@color/colorSecondary"
            android:thumbTint="@color/colorSecondary"
            app:layout_constraintBottom_toTopOf="@+id/divider3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintStart_toStartOf="parent" />

        <SeekBar
            android:id="@+id/iosSeek"
            android:layout_width="380dp"
            android:layout_height="28dp"
            android:layout_marginBottom="112dp"
            android:max="100"
            android:progressTint="@color/colorSecondary"
            android:thumbTint="@color/colorSecondary"
            app:layout_constraintBottom_toTopOf="@+id/divider3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintStart_toStartOf="parent" />

        <SeekBar
            android:id="@+id/flutterSeek"
            android:layout_width="380dp"
            android:layout_height="28dp"
            android:layout_marginBottom="44dp"
            android:max="100"
            android:progressTint="@color/colorSecondary"
            android:thumbTint="@color/colorSecondary"
            app:layout_constraintBottom_toTopOf="@+id/divider3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/age"
            android:layout_width="190dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/colorSecondary"
            android:ems="10"
            android:hint="Age"
            android:inputType="number"
            app:layout_constraintBottom_toTopOf="@+id/email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.868"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fullname"
            app:layout_constraintVertical_bias="0.535" />

        <EditText
            android:id="@+id/email"
            android:layout_width="190dp"
            android:layout_height="48dp"
            android:layout_marginTop="72dp"
            android:backgroundTint="@color/colorSecondary"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.868"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fullname" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="40dp"
            android:rotationX="0"
            android:rotationY="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.061"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/_46_1468843_profile_icon_orange_png_transparent_png" />

        <View
            android:id="@+id/divider2"
            android:layout_width="400dp"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="#000000"
            android:backgroundTintMode="add"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintVertical_bias="0.916" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="60dp"
            android:layout_height="24dp"
            android:text="Gender"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/radioGroup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintVertical_bias="0.608" />

        <View
            android:id="@+id/divider"
            android:layout_width="400dp"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="#100909"
            android:backgroundTintMode="add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email" />

        <LinearLayout
            android:layout_width="384dp"
            android:layout_height="63dp"
            android:orientation="horizontal"
            android:showDividers="middle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.481"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/divider3"
            app:layout_constraintVertical_bias="1.0">

            <Button
                android:id="@+id/reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RESET" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_weight="0.1" />

            <Button
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="NEXT" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>